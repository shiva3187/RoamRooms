<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-8 offset-2">Login on RoamRooms</h1>
    <div class="col-8 offset-2">
          <form action="/login" method="POST" class="needs-validation" novalidate >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
              <input
                name="username"
                id="username"
                type="text" 
                class="form-control"
                required
              />
              <div class="valid-feedback">looks good!</div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
              <input
                name="password"
                id="password"
                type="text" 
                class="form-control"
                required
              />
              </div>
              <button class="btn btn-dark add-btn mb-3 mt-3">Login</button>
          </form>

    </div>
</div>