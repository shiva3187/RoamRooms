<% layout("/layouts/boilerplate.ejs") %>

  <div class="row">
    <div class="col-8 offset-3 mt-3">
      <br>
    <h3>Listing Details :</h3>
    <br>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
      <div class="card-body">
        <p class="card-text">
         <b> <%= listing.title %></b><br>
        <i><%= listing.description %><br></i>
          &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
         <i> <%= listing.location %><br></i>
         <i> <%= listing.country %><br></i>
        </p>
      </div>
    </div>

    <br />
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn col-1 offset-3">Edit</a>
    
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class=" btn col-2 offset-5">Delete</button><br>
    </form>

  </div>
  
  </div>
  <br>

  
